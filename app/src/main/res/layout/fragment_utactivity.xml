<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:rowCount="15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:text="Datum: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="0" />

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:text="Vrijeme od: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="2" />

        <TimePicker
            android:id="@+id/startTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:timePickerMode="spinner"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:text="Vrijeme do: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="4" />

        <TimePicker
            android:id="@+id/endTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:timePickerMode="spinner"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="5" />

        <TextView
            android:id="@+id/project_spinner_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Projekt: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="6"
            app:layout_gravity="fill_horizontal"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"/>

        <Spinner
            android:id="@+id/project"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="7" />

        <TextView
            android:id="@+id/task_spinner_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Zadatak: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="8"
            app:layout_gravity="fill_horizontal"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"/>

        <Spinner
            android:id="@+id/task"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="9" />

        <TextView
            android:id="@+id/location_spinner_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Lokacija: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="10"
            app:layout_gravity="fill_horizontal"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"/>

        <Spinner
            android:id="@+id/location"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="11" />

        <TextView
            android:id="@+id/description_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Opis: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="12"
            app:layout_gravity="fill_horizontal"
            android:focusable="true"
            android:clickable="true"
            android:focusableInTouchMode="true"/>

        <EditText
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:maxLines="5"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_gravity="fill_horizontal"
            app:layout_row="13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Naplativo: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_column="0"
            app:layout_row="14" />

        <CheckBox
            android:id="@+id/billable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_column="1"
            app:layout_gravity="fill_horizontal"
            app:layout_row="14" />
    </android.support.v7.widget.GridLayout>

</ScrollView>